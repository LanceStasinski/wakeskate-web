<GeneralContainer {{did-insert this.load}} class='mb-10'>
  {{#if this.isShowingMap}}
    <Modal @onClick={{this.toggleModal}}>
      <Map @close={{this.close}} />
    </Modal>
  {{/if}}
  {{#if this.showInfo}}
    <Modal @onClick={{this.toggleInfo}}>
      <RatingInfo @onClose={{this.toggleInfo}}/>
    </Modal>
  {{/if}}
  {{#if this.showData}}
    <Weather @onToggleInfo={{this.toggleInfo}} />
    <div class='w-full flex justify-center text-center my-4'>
      <BlueButton {{on 'click' this.toggleModal}}>Change Location</BlueButton>
    </div>
  {{/if}}
</GeneralContainer>